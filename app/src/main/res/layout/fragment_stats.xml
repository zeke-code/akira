<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView with margin for better spacing -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_m"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/background">

            <!-- Content inside CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_m">

                <!-- Monthly Expenses Header -->
                <TextView
                    android:id="@+id/expenses_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_monthly_expenses_header"
                    android:textSize="20sp"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <!-- Expense Graph -->
                <com.patrykandpatrick.vico.views.cartesian.CartesianChartView
                    android:id="@+id/expense_chart_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp"
                    app:chartStyle="@style/ExpenseChartStyle" />

                <!-- Empty Expense Data Message -->
                <TextView
                    android:id="@+id/noExpensesDataTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_no_data_message"
                    android:textSize="@dimen/text_s"
                    android:textColor="@color/secondary_text"
                    android:gravity="center_horizontal"
                    android:visibility="gone" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/spacing_m"
                    android:background="@color/divider" />

                <!-- Monthly Revenue Header -->
                <TextView
                    android:id="@+id/revenue_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_monthly_revenue_header"
                    android:textSize="20sp"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_m" />

                <!-- Revenue Graph -->
                <com.patrykandpatrick.vico.views.cartesian.CartesianChartView
                    android:id="@+id/earning_chart_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp"
                    app:chartStyle="@style/RevenueChartStyle" />

                <!-- Empty Earnings Data Message -->
                <TextView
                    android:id="@+id/noEarningsDataTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_no_data_message"
                    android:textSize="@dimen/text_s"
                    android:textColor="@color/secondary_text"
                    android:gravity="center_horizontal"
                    android:visibility="gone" />

                <!-- Optional Expenses vs Revenue Graph (commented out)
                <com.patrykandpatrick.vico.views.cartesian.CartesianChartView
                    android:id="@+id/revenue_vs_expenses_chart_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:scrollEnabled="false"
                    app:layers="line"
                    app:lineLayerStyle="@style/ExpenseVsChartLineLayerStyle"
                    app:showStartAxis="true"
                    app:showBottomAxis="true"
                    android:padding="@dimen/spacing_m" />
                -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
