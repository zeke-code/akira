<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_header_text"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_header"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/spacing_m"
            android:background="@color/secondary_background" />

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name Setting -->
            <LinearLayout
                android:id="@+id/ll_name_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_l"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_s"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_name_icon"
                    android:layout_width="@dimen/icon_s"
                    android:layout_height="@dimen/icon_s"
                    android:src="@drawable/ic_user"
                    android:contentDescription="@string/settings_username" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:text="@string/settings_username"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!-- Budget Setting -->
            <LinearLayout
                android:id="@+id/ll_budget_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_l"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_s"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_budget_icon"
                    android:layout_width="@dimen/icon_s"
                    android:layout_height="@dimen/icon_s"
                    android:src="@drawable/ic_dollar"
                    android:contentDescription="@string/settings_budget" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:text="@string/settings_budget"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!-- Currency Setting -->
            <LinearLayout
                android:id="@+id/ll_currency_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_l"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_s"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_currency_exchange_icon"
                    android:layout_width="@dimen/icon_s"
                    android:layout_height="@dimen/icon_s"
                    android:src="@drawable/ic_currency_exchange"
                    android:contentDescription="@string/settings_current_currency" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:text="@string/settings_current_currency"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!-- Notifications Setting -->
            <LinearLayout
                android:id="@+id/ll_notifications_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_l"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_s"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_notifications_icon"
                    android:layout_width="@dimen/icon_s"
                    android:layout_height="@dimen/icon_s"
                    android:src="@drawable/ic_notifications"
                    android:contentDescription="@string/settings_notification_status" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:text="@string/settings_notification_status"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!-- API Key Setting -->
            <LinearLayout
                android:id="@+id/ll_api_key_setter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_l"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_s"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_api_icon"
                    android:layout_width="@dimen/icon_s"
                    android:layout_height="@dimen/icon_s"
                    android:src="@drawable/ic_api"
                    android:contentDescription="@string/settings_api_key_viewer" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_api_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:text="@string/settings_api_key_viewer"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!-- Delete All Transactions -->
            <LinearLayout
                android:id="@+id/ll_delete_all_transactions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_l"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_s"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_delete_transactions_icon"
                    android:layout_width="@dimen/icon_s"
                    android:layout_height="@dimen/icon_s"
                    android:src="@drawable/ic_delete_bin"
                    android:contentDescription="@string/settings_delete_all_transactions" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_delete_all_transactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:text="@string/settings_delete_all_transactions"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!-- App Version -->
            <LinearLayout
                android:id="@+id/ll_app_version"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_l"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_s"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_version_info"
                    android:layout_width="@dimen/icon_s"
                    android:layout_height="@dimen/icon_s"
                    android:src="@drawable/ic_info"
                    android:contentDescription="@string/settings_delete_all_transactions" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:text="@string/settings_app_version"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
