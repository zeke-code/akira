<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AkiraFinancialTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/primary_text</item>
        <item name="colorOnSecondary">@color/secondary_text</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSecondaryContainer">@color/secondary_background</item>
        <item name="colorSecondaryVariant">@color/tertiary_background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Divider and disabled colors -->
        <item name="dividerColor">@color/divider</item>
        <item name="colorControlNormal">@color/disabled_element</item>
        <item name="colorControlActivated">@color/accent_blue</item>

        <!-- Status and navigation bar -->
        <item name="android:statusBarColor" >@color/background</item>
        <item name="android:navigationBarColor" >@color/background</item>
    </style>

    <style name="Theme.AkiraFinancialTracker" parent="Base.Theme.AkiraFinancialTracker" />
</resources>